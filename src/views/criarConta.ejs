<!DOCTYPE html>
<html lang="pt-br">

<!-- ========================HEAD=============================HEAD============================= -->
  
<%- include('partials/head',{links:['header2','criarConta']}) %>

<!-- ============================BODDY========================BODDY============================= -->

<body>

  <!-- ========================HEADER========================HEADER======================== -->

  <%- include("partials/header2") %>
  
  <!-- ==========================MAIN============================MAIN========================== -->
   
    <main> 
      <div class="container">
        <form action="acessar" method="post">
          <div class="formulario">
            <h3 class="titulo">Crie sua conta</h3>
            <label for="nome">Nome Completo</label>
            <br>
            <input type="text" id="nome" name="nome" placeholder="Digite seu nome completo" required>
            <br>
            <label for="email">Email</label>
            <br>
            <input type="email" id="email" name="email" placeholder="Digite seu email" required> 
            <br>
            <label for="celular">Celular</label>
            <br>
            <input type="tel" id="celular" name="celular" placeholder="DDD + celular" required> 
            <br>            
            <label for="nascimento">Nascimento</label>
            <br>
            <input type="text" id="nascimento" name="nascimento" onfocus="(this.type='date')" placeholder="Digite sua data de nascimento" required> 
            <br>
            <label for="cpf">CPF</label>
            <br>
            <input type="text" id="cpf" name="cpf" pattern="\d{3}\.?\d{3}\.?\d{3}-?\d{2}" placeholder="Digite o seu CPF" required> 
            <br>
            <label for="email">Senha</label>
            <br>
            <input type="password" id="senha" name="senha" placeholder="Digite sua senha" required>
            <br>
            <label for="email">Confirmar a senha</label>
            <br>
            <input type="password" id="senha" name="senha" placeholder="Digite sua senha" required>
            <br>

            <label for="cep">CEP</label>
            <br>
            <input type="text" id="cep" name="cep" placeholder="Digite seu CEP" required>
            <br>
            <button id="btn-cep" type="button">pesquisar</button>
            <br>
            <label for="logradouro">Rua</label>
            <br>
            <input type="text" id="logradouro" name="logradouro" placeholder="Digite o Logradouro" required>
            <br>
            <label for="numero">Número</label>
            <br>
            <input type="number" id="numero" name="numero" placeholder="Digite o numero da residência" required>
            <br>
            <label for="bairro">Bairro</label>
            <br>
            <input type="text" id="bairro" name="bairro" placeholder="Digite seu Bairro"  required>
            <br>
            <label for="localidade">Cidade</label>
            <br>
            <input type="text" id="localidade" name="localidade" placeholder="Digite sua Cidade"  required>
            <br>
            <br><label for="uf">Estado</label>
            <br>
            <input type="text" id="uf" name="uf" placeholder="Digite seu Estado"  required>
            <br>
            
          </div>
          
          <div class="termos"><input type="checkbox" id="termos" value="termos"><label for="integral">Concordo com os <a href="">termos e condições</a></label></div>
          
          <div class="entrar"><button type="submit">Cadastrar</button></div>
        </form>
      </div> 
      
      <div class="copy">Copyright© 2022 Buddy Pet Corporated - Todos os direitos reservados</div>

    </main>
    <script src="/buscaCep.js"></script>
</body>
</html>