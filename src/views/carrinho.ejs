              <option value="3">3</option>
              <option value="4">4</option>
              <option value="5">5</option>
            </select>
          </form>
          
          <div class="valor">
            <div class="valor_num">R$ 129,90</div>  
          </div>
          <div class="trash">
            <a id="excluir" href="">Excluir</a>
            <i id="lixo" class="fa fa-trash-o" style="font-size:26px"></i>
